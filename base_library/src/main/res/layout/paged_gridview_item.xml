<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dynamic_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_dynamic_icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:baselineAlignBottom="false"
                android:maxHeight="40dp" />
        </RelativeLayout>

        <com.androidapp.roundview.RoundTextView
            android:id="@+id/tv_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dip"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dip"
            android:textColor="#FB393F"
            android:textSize="10sp"
            android:visibility="gone"
            app:rv_backgroundColor="@android:color/white"
            app:rv_cornerRadius="8dp"
            app:rv_strokeColor="#FB393F"
            app:rv_strokeWidth="1dp"
            tools:text="送红包" />
    </FrameLayout>

    <TextView
        android:id="@+id/iv_dynamic_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/black_main"
        android:textSize="13sp"
        tools:text="描述信息" />
</LinearLayout>
