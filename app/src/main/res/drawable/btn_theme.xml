<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button按下的背景 -->
    <item android:state_enabled="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/frame_radius_size" android:bottomRightRadius="@dimen/frame_radius_size" android:topLeftRadius="@dimen/frame_radius_size" android:topRightRadius="@dimen/frame_radius_size" />
            <solid android:color="#bbbbbb" />
        </shape>
    </item>
    <!-- Button按下的背景 -->
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/frame_radius_size" android:bottomRightRadius="@dimen/frame_radius_size" android:topLeftRadius="@dimen/frame_radius_size" android:topRightRadius="@dimen/frame_radius_size" />
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <!-- Button正常状态下的背景 -->
    <item>
        <shape>
            <corners android:bottomLeftRadius="@dimen/frame_radius_size" android:bottomRightRadius="@dimen/frame_radius_size" android:topLeftRadius="@dimen/frame_radius_size" android:topRightRadius="@dimen/frame_radius_size" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
</selector>
