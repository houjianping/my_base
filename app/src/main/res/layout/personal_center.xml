<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_panel_bg">

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="-200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_weibo_home_2"
        app:layout_collapseMode="parallax" />

    <com.androidapp.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.85"
        app:srlEnableLoadMore="true"
        app:srlEnablePureScrollMode="true">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:titleEnabled="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="60dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/rl_personal_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/padding_common_h"
                            android:paddingTop="@dimen/padding_common_v"
                            android:paddingRight="@dimen/padding_common_h"
                            android:paddingBottom="@dimen/padding_common_v">

                            <RelativeLayout
                                android:id="@+id/rlSettingAvatar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivSettingAvatar"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/rlSettingAvatar"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvSettingName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="迷路的麋鹿"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ivMyHomePage"
                                        android:layout_width="85dp"
                                        android:layout_height="25dp"
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/icon_personal_homepage" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_personal_info"
                            android:background="@drawable/bg_divider"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/my_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sousuo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="我的账户"
                                    android:textColor="@color/black_main"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_redpack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sousuo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="礼券"
                                    android:textColor="@color/black_main"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/authentication_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sousuo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="活动中心"
                                    android:textColor="@color/black_main"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sousuo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="我的动态"
                                    android:textColor="@color/black_main"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.design.widget.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_panel_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_common"
                    android:paddingBottom="@dimen/division_line"
                    app:layout_scrollFlags="scroll">

                    <com.androidapp.widget.SettingItem
                        android:id="@+id/setting_share_reward"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:settingsIcon="@drawable/icon_sousuo"
                        app:settingsShowTopDiv="true"
                        app:settingsSummary="各得优惠券"
                        app:settingsTitle="分享有赏" />

                    <com.androidapp.widget.SettingItem
                        android:id="@+id/setting_inviting_friends"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:settingsIcon="@drawable/icon_sousuo"
                        app:settingsShowBottomDiv="true"
                        app:settingsSummary=""
                        app:settingsTitle="邀请好友" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_panel_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_common"
                    android:paddingBottom="@dimen/division_line"
                    app:layout_scrollFlags="scroll">

                    <com.androidapp.widget.SettingItem
                        android:id="@+id/setting_leaving_message"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:settingsIcon="@drawable/icon_sousuo"
                        app:settingsShowTopDiv="true"
                        app:settingsTitle="我的留言" />

                    <com.androidapp.widget.SettingItem
                        android:id="@+id/setting_favorite"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:settingsIcon="@drawable/icon_sousuo"
                        app:settingsSummary="1"
                        app:settingsTitle="我的收藏" />

                    <com.androidapp.widget.SettingItem
                        android:id="@+id/setting_download"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:settingsIcon="@drawable/icon_sousuo"
                        app:settingsShowBottomDiv="true"
                        app:settingsSummary=""
                        app:settingsTitle="我的下载" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_panel_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_common"
                    android:paddingBottom="@dimen/division_line">

                    <com.androidapp.widget.SettingItem
                        android:id="@+id/item_setting"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:settingsIcon="@drawable/icon_sousuo"
                        app:settingsShowBottomDiv="true"
                        app:settingsShowTopDiv="true"
                        app:settingsTitle="设置" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.androidapp.smartrefresh.layout.SmartRefreshLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        app:layout_collapseMode="pin"
        app:navigationIcon="@null">

        <android.support.v7.widget.ButtonBarLayout
            android:id="@+id/buttonBarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/padding_common_d"
                android:layout_marginRight="@dimen/padding_common_d"
                android:src="@mipmap/image_avatar_5"
                app:civ_border_color="@android:color/white"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/division_line" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="一醉方休"
                android:textColor="@color/black_main"
                android:textSize="16sp" />
        </android.support.v7.widget.ButtonBarLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_gravity="center">
                <include layout="@layout/layout_custom_right" />
            </RelativeLayout>
        </android.support.v7.widget.ButtonBarLayout>

    </android.support.v7.widget.Toolbar>
</FrameLayout>