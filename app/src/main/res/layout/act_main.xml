<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false">

    <FrameLayout
        android:id="@+id/fl_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_layout" />

    <com.androidapp.tablayout.CommonTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tl:tl_iconHeight="20dp"
        tl:tl_iconWidth="20dp"
        tl:tl_indicator_color="#FFF0F0F0"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="#ff5c5c"
        tl:tl_textUnselectColor="#808080"
        tl:tl_textsize="11sp"
        tl:tl_underline_color="#d9d9d9"
        tl:tl_underline_gravity="TOP"
        tl:tl_underline_height="1px" />
</RelativeLayout>