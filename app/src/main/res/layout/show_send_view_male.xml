<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FFFFFF">

    <LinearLayout
        android:id="@+id/ll_dissmiss"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:addStatesFromChildren="true"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">
        <View
            android:id="@+id/send_type_msg_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/icon_show_btn_close"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:paddingBottom="90dp">

            <com.siyuan.enjoyreading.widget.ShowSendItemView
                android:id="@+id/itemOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <com.siyuan.enjoyreading.widget.ShowSendItemView
                android:id="@+id/itemThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="90dp">

            <com.siyuan.enjoyreading.widget.ShowSendItemView
                android:id="@+id/itemTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <com.siyuan.enjoyreading.widget.ShowSendItemView
                android:id="@+id/itemFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/padding_common"
        android:paddingRight="@dimen/padding_common"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="02"
                android:textSize="40sp"
                android:textColor="@color/colorTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="周二"
                    android:textColor="@color/colorTextContent"
                    android:textSize="@dimen/font_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="04/2019"
                    android:textColor="@color/colorTextContent"
                    android:textSize="@dimen/font_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
