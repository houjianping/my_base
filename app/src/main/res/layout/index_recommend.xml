<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.androidapp.widget.AppScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.androidapp.banner.Banner
                android:id="@+id/recommend_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:is_auto_play="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/indexLabelIcon"
                        android:src="@mipmap/ic_new_course" />

                    <TextView
                        style="@style/indexLabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新课" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/indexLabelIcon"
                        android:src="@mipmap/ic_yan_xi_she" />

                    <TextView
                        style="@style/indexLabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专题" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/indexLabelIcon"
                        android:src="@mipmap/ic_read" />

                    <TextView
                        style="@style/indexLabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="读书会" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/indexLabelIcon"
                        android:src="@mipmap/iv_wan_hui" />

                    <TextView
                        style="@style/indexLabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/indexLabelIcon"
                        android:src="@mipmap/iv_wan_hui" />

                    <TextView
                        style="@style/indexLabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#f8f8f8"
                android:layout_width="fill_parent"
                android:layout_height="15dp" />
            <com.siyuan.enjoyreading.widget.HeaderView
                android:id="@+id/praise_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <com.androidapp.pagedgridview.PagedGridView
                android:id="@+id/praise_gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                />
            <View
                android:background="#f8f8f8"
                android:layout_width="fill_parent"
                android:layout_height="15dp" />
            <com.siyuan.enjoyreading.widget.HeaderView
                android:id="@+id/editor_praise_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <com.androidapp.pagedgridview.PagedGridView
                android:id="@+id/editer_praise_gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                />
            <LinearLayout
                android:id="@+id/ll_recommend_group"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </com.androidapp.widget.AppScrollView>
</LinearLayout>
